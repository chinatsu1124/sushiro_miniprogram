/**app.wxss**/
/* 全局样式 */
page {
  background-color: #f5f5f5;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 通用容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 24rpx 40rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
}

.btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.btn[disabled] {
  background: #ccc;
  color: #999;
  transform: none;
  box-shadow: none;
}

.btn.primary {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.btn.secondary {
  background: linear-gradient(135deg, #ff9c6e 0%, #ff6b9d 100%);
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 16rpx 50rpx rgba(0,0,0,0.15);
}

/* 加载动画 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 消息样式 */
.message {
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
}

.message.success {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.message.error {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: white;
}

.message.warning {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  color: white;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
  overflow: hidden;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: 600;
  color: #333;
  font-size: 28rpx;
}

.picker-text {
  width: 100%;
  padding: 24rpx;
  border: 4rpx solid #e1e5e9;
  border-radius: 20rpx;
  font-size: 28rpx;
  background-color: white;
  color: #333;
  box-sizing: border-box;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 统计卡片样式 */
.stat-card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 16rpx 50rpx rgba(0,0,0,0.15);
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  color: #666;
  font-size: 24rpx;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 100rpx 20rpx;
  }
  
  .card {
    padding: 30rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
}
